<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Only turnleft"
		android:id="@+id/button_only_left"
		/>
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Only turn right"
		android:id="@+id/button_only_right"
		/>
    
    
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Forward"
		android:id="@+id/button_forward"
		/>
		
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Backward"
		android:id="@+id/button_backward"
		/>

	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Left"
		android:id="@+id/button_turn_left"
		/>
		
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Right"
		android:id="@+id/button_turn_right"
		/>
	
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Stop"
		android:id="@+id/button_brake"
		/>
	
	<Button 
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="Start service"
		android:id="@+id/button_start_service"
		/>
	
	
</LinearLayout>
